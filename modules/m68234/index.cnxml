                      </m:mfrac>
                    </m:mrow>
                  </m:mfenced>
                  <m:mn>2</m:mn>
                </m:msup>
              </m:mtd>
              <m:mtd>
                <m:mo form="infix">=</m:mo>
                <m:mrow>
                  <m:msup>
                    <m:mfenced>
                      <m:mrow>
                        <m:mi>c</m:mi>
                        <m:mo>⁢</m:mo>
                        <m:mfrac>
                          <m:mrow>
                            <m:mo>Δ</m:mo>
