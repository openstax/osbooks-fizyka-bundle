              </m:mtr>
              <m:mtr>
                <m:mtd>
                  <m:msup>
                    <m:mfenced>
                      <m:mrow>
                        <m:mi>c</m:mi>
                        <m:mo>⁢</m:mo>
                        <m:mfrac>
                          <m:mrow>
                            <m:mo>Δ</m:mo>
                            <m:mi>t</m:mi>
                          </m:mrow>
                          <m:mn>2</m:mn>
                        </m:mfrac>
