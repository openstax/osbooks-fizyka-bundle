                </m:mtr>
              </m:mtable>
              <m:annotation encoding="application/vnd.katalysteducation.mathtex">            \begin{multiline} \prefop{\Delta} m &amp;= m_{\text{p}} + m_{\text{n}} - m_{\text{D}} = \SI{938,27}{\mega\electronvolt} / c^2 + \SI{938,57}{\mega\electronvolt} / c^2 - \SI{1875,6}{\mega\electronvolt} / c^2 \\ &amp;= \SI{2,23}{\mega\electronvolt} / c^2 \text{.} \end{multiline}</m:annotation>
              <m:annotation-xml encoding="application/vnd.katalysteducation.legtool.mathml.original+xml">
