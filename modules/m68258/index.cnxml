          <m:annotation encoding="application/vnd.katalysteducation.mathtex"> \num{0,250}</m:annotation>
        </m:semantics>
      </m:math>
    </entry>
  </row>
  <row valign="top">
    <entry valign="top" align="center">
    NaI
    </entry>
    <entry valign="top" align="center">
      <m:math display="inline">
